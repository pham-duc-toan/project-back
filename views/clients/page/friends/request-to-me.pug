extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
  
  .container.my-3
    include ../../partials/list-btn-friends.pug
    .row
      .col-12
        +box-head("Lời mời kết bạn")
    .row(page-request-to-me)
      each user in listUsers 
        .col-6(box-user-id=user.id)
          div(class="box-user add")
            div(class="inner-avatar")
                img(
                    src=(user.avatar ? user.avatar : "/clients/images/avt-user.png" )
                    alt=user.fullName
                )
            div(class="inner-info") 
                div(class="inner-name") #{user.fullName}
                div(class="inner-buttons") 
                    button(
                      class="btn btn-sm btn-primary mr-1"
                      btn-accept-friend=user.id
                    ) Chấp nhận
                    button(
                      class="btn btn-sm btn-secondary mr-1"
                      btn-refuse-friend=user.id
                    ) Xóa
                    button(
                      class="btn btn-sm btn-secondary mr-1"
                      btn-deleted-friend
                      disabled
                    ) Đã xóa
                    button(
                      class="btn btn-sm btn-primary mr-1"
                      btn-accepted-friend
                      disabled
                    ) Đã chấp nhận
    
block script 
  script(src="/clients/js/friends.js") 